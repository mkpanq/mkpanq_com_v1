---
import Availability from "../components/Availability.astro";
import PageLayout from "../layouts/PageLayout.astro";
import { SEO } from "astro-seo";

const pageTitle = "Marek Pankowski - Software Engineer";
---

<SEO
  extend={{
    meta: [
      {
        name: "title",
        content: "Home",
      },
      {
        name: "og:title",
        content: "Marek Pankowski - Home",
      },
      {
        name: "og:image",
        content:
          "https://dynamic-og-image-generator.vercel.app/api/generate?title=Home&author=Marek+Pankowski&websiteUrl=https%3A%2F%2Fmkpanq.com&avatar=https%3A%2F%2Favatars.githubusercontent.com%2Fu%2F17934750%3Fv%3D4&theme=default",
      },
    ],
  }}
/>
<PageLayout pageTitle={pageTitle}>
  <div class="flex flex-col gap-10 md:gap-15">
    <span class="max-sm:self-center"><Availability /></span>
    <p class="text-2xl sm:text-4xl md:text-5xl lg:text-6xl font-normal">
      Hi ! 👋🏻 I'm Marek Pankowski
    </p>
    <p class="text-3xl sm:text-5xl md:text-6xl lg:text-7xl font-bold">
      I'm a fullstack software engineer
    </p>
    <p
      class="text-justify text-xl/10 sm:text-3xl/10 md:text-4xl/loose lg:text-5xl/loose font-light"
    >
      I build thoughtful software and help teams focus on what matters — solid
      engineering and a product-first mindset.
    </p>
  </div>
</PageLayout>
